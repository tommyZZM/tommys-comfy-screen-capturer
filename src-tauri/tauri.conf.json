{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tommys-comfy-screen-capturer",
  "version": "0.1.0",
  "identifier": "com.tommys-comfy-screen-capturer.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tommysComfyScreenCapturer",
        "width": 512,
        "height": 512,
        "minWidth": 256,
        "minHeight": 256,
        "transparent": true,
        "decorations": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "minimizable": false,
        "visible": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
